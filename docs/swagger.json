        "/updates": {
            "post": {
                "description": "Принимает массив метрик в JSON формате и обновляет их все за один запрос",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Info"
                ],
                "summary": "Пакетное обновление метрик",
                "parameters": [
                    {
                        "description": "Массив метрик для обновления",
                        "name": "metrics",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Metrics"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Пример: {\\\"status\\\":\\\"OK\\\"}",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Пример: {\\\"error\\\":\\\"validation failed\\\",\\\"details\\\":[\\\"metric[0]: ID is required\\\"]}",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Пример: {\\\"error\\\":\\\"failed to update metric Alloc\\\"}",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/value": {
            "post": {
                "description": "Принимает JSON с полями id и type, возвращает структуру метрики с полями ID, Type, Value.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Info"
                ],
                "summary": "Получение метрики в JSON формате",
                "parameters": [
                    {
                        "description": "Метрика для поиска (нужны только id и type)",
                        "name": "metric",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Metrics"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Найденная метрика",
                        "schema": {
                            "$ref": "#/definitions/model.Metrics"
                        }
                    },
                    "400": {
                        "description": "Неверный формат JSON, отсутствуют обязательные поля, неизвестный тип метрики",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Метрика не найдена",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "schema": {
                            "type": "string"
                        }
                    }
