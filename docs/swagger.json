    "definitions": {
        "model.Metrics": {
            "type": "object",
            "properties": {
                "delta": {
                    "description": "целочисленное поле, используется для хранения значения метрики типа counter",
                    "type": "integer"
                },
                "hash": {
                    "description": "контрольная сумма процерки целостности данных",
                    "type": "string"
                },
                "id": {
                    "description": "уникальный индетификатор",
                    "type": "string"
                },
                "type": {
                    "description": "тим метрики",
                    "type": "string"
                },
                "value": {
                    "description": "число с плавающей точкой, используется для хранения значения метрики типа gauge",
                    "type": "number"
                }
            }
